<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ayush.complaint_management_system.Complaint_Page"
    tools:showIn="@layout/app_bar_complaint__page">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TODO: Add a comment thread...give details....also like dislike buttons ...and one rsolved/unresolved like piazza"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Home Page"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        android:onClick="back" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:layout_above="@+id/button6"
        android:layout_centerHorizontal="true"
        android:text="Post Comment"
        android:onClick="post_comment" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment"
        android:layout_above="@+id/button7"
        android:layout_alignEnd="@+id/button7"
        android:text="Enter your comment...sorry for the awesome ui" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have added Set response api in set_res method"
        android:id="@+id/Set_Respone"
        android:layout_above="@+id/comment"
        android:layout_centerHorizontal="true"
        android:onClick="Set_Response" />

</RelativeLayout>
