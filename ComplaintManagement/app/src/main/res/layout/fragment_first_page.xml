<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.github.jorgecastillo.FillableLoader
        android:id="@+id/fillableLoader"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:fl_fillColor="#e18b01"
        app:fl_strokeColor="#e18b01"
        app:fl_strokeWidth="1dp"
        app:fl_originalWidth="540"
        app:fl_originalHeight="540"
        app:fl_fillDuration="3000"
        app:fl_strokeDrawingDuration="1500"
        app:fl_clippingTransform="waves"
        android:layout_marginTop="100dp"

        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="495dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:text="Swipe Left"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/Arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="200dp"
        android:layout_gravity="center"
        android:background="@drawable/thefinger"
        />

    <TextView
        android:id="@+id/complaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:text="COMPLAINT MANAGEMENT SYSTEM"
        android:textAlignment="center"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_marginTop="270dp"
        />

    <TextView
        android:id="@+id/cover"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="460dp"
        />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:background="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="-113dp"
        android:layout_marginRight="6dp"/>

</FrameLayout>